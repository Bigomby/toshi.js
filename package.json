  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Bigomby/toshi.js"
  },
  "scripts": {
    "test": "jest",
    "pretest": "npm run lint",
    "lint": "tslint --project .",
    "build": "webpack --progress --config config/webpack.config.js",
    "release": "webpack --progress --env.prod --config config/webpack.config.js",
    "docs": "typedoc -p . --theme minimal --target 'es6' --excludeNotExported --excludePrivate --ignoreCompilerErrors --out docs src/index.ts"
  },
  "peerDependencies": {
    "tslib": ">=1.9.0",
    "typescript": ">=2.9.0"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bip39": "^2.5.0",
    "ethereumjs-wallet": "^0.6.0",
    "js-sha3": "^0.7.0",
    "secp256k1": "^3.5.0",
    "signal-protocol": "^0.1.3",
    "typedoc-plugin-external-module-name": "^1.1.1",
    "web3": "^1.0.0-beta.34"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/node": "^10.1.2",
    "awesome-typescript-loader": "^5.2.0",
    "jest": "^23.0.0",
    "nock": "^9.3.3",
    "prettier": "^1.13.7",
    "timekeeper": "^2.1.2",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "typedoc": "^0.11.1",
    "typescript": "2.9.2",
    "webpack": "^4.13.0",
    "webpack-cli": "^3.0.8",
    "webpack-config-utils": "^2.3.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
